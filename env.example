# Pixscaler Environment Configuration
# Copy this file to .env and set your own values

# ⚠️  CRITICAL SECURITY SETTINGS - MUST BE SET IN PRODUCTION
# Generate secure random strings for these values
JWT_SECRET=your-super-secret-jwt-key-change-in-production-REQUIRED
SESSION_SECRET=your-session-secret-change-in-production-REQUIRED

# Server Configuration
PORT=3000
HOST=localhost
NODE_ENV=development

# Database Configuration
DB_PATH=./database/pixscaler.db

# OAuth Configuration (Optional - for social login)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Email Configuration (Optional - for email verification)
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=noreply@pixscaler.com

# Payment Configuration (Optional - for premium subscriptions)
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Analytics Configuration (Optional)
GOOGLE_ANALYTICS_ID=
GOOGLE_ADSENSE_ID=

# Security Configuration
CORS_ORIGINS=http://localhost:3000

# Rate Limiting Configuration
DISABLE_RATE_LIMITING=false

# ===== PRODUCTION DEPLOYMENT CHECKLIST =====
# Before deploying to production, ensure:
# 1. ✅ JWT_SECRET is set to a secure random string (minimum 32 characters)
# 2. ✅ SESSION_SECRET is set to a secure random string (minimum 32 characters)
# 3. ✅ NODE_ENV is set to 'production'
# 4. ✅ CORS_ORIGINS is set to your actual domain(s)
# 5. ✅ DATABASE_PATH points to a secure location
# 6. ✅ All sensitive keys are stored securely (not in version control)
#
# Generate secure secrets using:
# - Node.js: require('crypto').randomBytes(32).toString('hex')
# - OpenSSL: openssl rand -hex 32
# - Online: https://www.uuidgenerator.net/guid

# Rate Limiting Configuration
RATE_LIMIT_FREE_IMAGES_PER_HOUR=10
RATE_LIMIT_PREMIUM_IMAGES_PER_HOUR=1000
RATE_LIMIT_API_REQUESTS_PER_15MIN=100
RATE_LIMIT_AUTH_ATTEMPTS_PER_15MIN=5

# File Upload Configuration
MAX_FILE_SIZE_FREE_MB=5
MAX_FILE_SIZE_PREMIUM_MB=50

# Subscription Plans Configuration
BASIC_PLAN_PRICE=3.99
SMART_PLAN_PRICE=9.99
PROFESSIONAL_PLAN_PRICE=19.99

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Analytics Configuration
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Security Configuration
CORS_ORIGIN=http://localhost:3000
HELMET_CSP_ENABLED=true

# Image Processing Configuration
SHARP_CACHE_SIZE_MB=50
SHARP_CONCURRENCY=4

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/pixscaler.log

# Development Configuration
DEBUG_MODE=false
ENABLE_API_DOCS=true 